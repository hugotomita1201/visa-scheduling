{
  "manifest_version": 3,
  "name": "US Visa Scheduling Auto-Filler",
  "version": "1.1.1",
  "description": "Auto-fill US Visa Scheduling forms with dependent management",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.usvisascheduling.com/*",
    "https://ais.usvisa-info.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.usvisascheduling.com/*",
        "https://ais.usvisa-info.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}